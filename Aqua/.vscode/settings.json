{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.debugConfig": {
        "cwd": "${workspaceFolder}"
    },
    "cmake.testEnvironment": {
        "cwd": "${workspaceFolder}"
    },
    "VsCodeTaskButtons.showCounter": false,
    "VsCodeTaskButtons.tasks": [
        {
            "label": "$(file-pdf) Generate documentation",
            "task": "Make docs",
        },
        {
            "label": "$(repo-sync) Sync to Windows",
            "task": "Sync to mnt",
        }
    ],
    "C_Cpp.files.exclude": {
        "build/**": true,
    },
    "files.watcherExclude": {
        "build/**": true,
    },
    "search.exclude": {
        "build/**": true,
    },
    "files.exclude": {
        "build/**": true,
    },
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
    "C_Cpp.codeAnalysis.exclude": {
        "build/**": true,
    },
    "editor.formatOnSave": true,
    "cmake.configureOnOpen": true,
    "cSpell.language": "en,hu",
    "sonarlint.pathToCompileCommands": "${workspaceFolder}/build/compile_commands.json",
    "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
        "google-build-using-namespace",
        "google-readability-todo",
        "readability-magic-numbers",
        "readability-braces-around-statements",
        "readability-identifier-length",
        "bugprone-narrowing-conversions",
        "modernize-use-trailing-return-type",
        "bugprone-easily-swappable-parameters"
    ],
    "files.associations": {
        "*.cps": "javascript",
        "atomic": "cpp",
        "any": "cpp",
        "array": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
        "chrono": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "condition_variable": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "map": "cpp",
        "set": "cpp",
        "string": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "ratio": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "fstream": "cpp",
        "initializer_list": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "numbers": "cpp",
        "ostream": "cpp",
        "semaphore": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "stop_token": "cpp",
        "streambuf": "cpp",
        "thread": "cpp",
        "cinttypes": "cpp",
        "typeinfo": "cpp",
        "variant": "cpp"
    },
    "cSpell.enabled": true,
}